<%- include partials/header %>


  <div class="row">
      <div>
          <section class="panel">
              <header class="panel-heading">
                  Tạo Sản Phẩm
              </header>
              <div class="panel-body ">

                  <span style="font-size: 18px;color:red">* : yêu cầu</span>
                  <form action="./category-children-create" method="POST">
                      <div class="col-lg-6">
                      <div class="form-group">
                            <label for="txtCategoryNameEN">Danh Mục <span style="color:red">*</span></label>
                            <select class="form-control m-bot15" name="parentId">
                              <% categories.forEach((item, index) => {
                                %> <option value="<%= item._id %>" disabled><%= item.name_vn %></option> <%
                                if(item.children.length > 0) {
                                    item.children.forEach((child, index1) => {
                                    %> 
                                    <option value="<%= child._id %>" <% if(typeof categoryId != 'undefined') {%> selected <%} %> >|--<%= child.name_vn %></option> 
                                    <%
                                    })
                                }
                              }) %>
                            </select>
                          </div>
                          <div class="form-group">
                              <label for="txtProductNameVN">Tên Sản Phẩm(VN)  <span style="color:red">*</span></label>
                              <input type="text" class="form-control" name="txtProductNameVN" placeholder="Nước Hoa" value="<%- (typeof product != 'undefined') ? product.name_vn : '' %>" required/>
                          </div>
                          <div class="form-group">
                              <label for="txtProductNameEN">Tên Sản Phẩm(EN)  <span style="color:red">*</span></label>
                              <input type="text" class="form-control" name="txtProductNameEN" placeholder="Perfume" value="<%- (typeof product != 'undefined') ? prodcut.name_en : '' %>" required/>
                          </div>
                          
                      </div>
                      <div class="col-lg-12">
                          <input type="submit" name="btnSubmit" class="btn btn-info" id="pulsate-regular" value="Tạo Danh Mục Sản Phẩm">
                      </div>
                  </form>
              </div>
          </section>

      </div>

  </div>



<!--footer start-->
<%- include partials/footer %>
