<%- include partials/header %>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Dịch Vụ
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                <tr>
                    <th><i class="fa fa-bullhorn"></i> Tên Dịch Vụ</th>
                    <!--<th class="hidden-phone"><i class="fa fa-question-circle"></i> Descrition</th>-->
                    <!--<th><i class="fa fa-bookmark"></i> Profit</th>-->
                    <th><i class=" fa fa-edit"></i>Tình Trạng Hoạt động</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <% for(var i in services) {
                    console.log(services[i].isEnabled);
                %>
                <tr>
                    <td><a href="#"><%= services[i].name %></a></td>
                    <!--<td class="hidden-phone">Lorem Ipsum dorolo imit</td>-->
                    <!--<td>12120.00$ </td>-->
                    <td>
                        <input id="enableToggle" type="checkbox"
                            <% if(typeof services[i].isEnabled !== 'undefined' && services[i].isEnabled != false) {%>
                                    checked = ''
                            <% } %>
                               data-toggle="switch" serviceName="<%= services[i].name %>" serviceId="<%= services[i]._id %>" />
                    </td>
                    <td>
                        <button id="service-edit" serviceId="<%= services[i]._id %>" class="btn btn-primary btn-xs" ><i class="fa fa-pencil"></i></button>
                        <button id="service-delete" serviceName="<%= services[i].name %>" serviceId="<%= services[i]._id %>" class="btn btn-danger btn-xs" ><i class="fa fa-trash-o "></i></button>
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </section>
    </div>
</div>
<!--footer start-->
<%- include partials/footer %>
