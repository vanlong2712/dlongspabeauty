<%- include partials/header %>


  <div class="row">
      <div>
          <section class="panel">
              <header class="panel-heading">
                  Thiết lập Admin
              </header>
              <div class="panel-body ">

                <span style="font-size: 18px;color:red">* : yêu cầu</span>
                <form action="/187_admin/admin-edit" method="POST">
                  <input type="hidden" name="adminId" value="<%= data._id %>" />
                  <div class="form-group">
                    <label class="control-label">Quyền truy cập <span style="color:red">*</span></label><br/>
                    <div class="checkboxes">
                        <input name="Priviledge" id="checkbox-01" value="service" type="checkbox"
                            <%
                              if(data.isPriviledge.includes('service')) { %>
                                checked
                            <%}%>
                        > Dịch Vụ <br />
                        <input name="Priviledge" id="checkbox-02" value="product" type="checkbox"
                            <%
                              if(data.isPriviledge.includes('product')) { %>
                                checked
                            <%}%>
                        > Sản phẩm <br />
                        <input name="Priviledge" id="checkbox-02" value="admin" type="checkbox"
                            <%
                              if(data.isPriviledge.includes('admin')) { %>
                                checked
                            <%}%>
                        > Quản Lý Admin<br />
                        <!-- <input name="Priviledge" id="checkbox-03" value="1" type="checkbox"> This is nice checkbox. <br /> -->
                    </div>
                  </div>
                  <div class="col-lg-12">
                      <input type="submit" name="btnSubmit" class="btn btn-info" id="pulsate-regular" value="Thay đổi">
                  </div>
                </form>
              </div>
          </section>

      </div>

  </div>



