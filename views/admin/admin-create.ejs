<%- include partials/header %>


  <div class="row">
      <div>
          <section class="panel">
              <header class="panel-heading">
                  Tạo Admin
              </header>
              <div class="panel-body ">

                  <span style="font-size: 18px;color:red">* : yêu cầu</span>
                  <form action="./admin-create" method="POST">
                      <div class="col-lg-6">
                          <div class="form-group">
                              <label for="email">Email  <span style="color:red">*</span></label>
                              <input type="email" class="form-control" name="email" placeholder="Email" required/>
                          </div>
                          <div class="form-group">
                              <label for="txtLastName">Họ  <span style="color:red">*</span></label>
                              <input type="text" class="form-control" name="txtLastName" placeholder="Họ " required/>
                          </div>
                          <div class="form-group">
                              <label for="txtFirstName">Tên  <span style="color:red">*</span></label>
                              <input type="text" class="form-control" name="txtFirstName" placeholder="Tên" required/>
                          </div>
                          <div class="form-group">
                              <label for="txtSex">Giới tính  <span style="color:red">*</span></label>
                              <input type="radio" name="txtSex" value="1" required> Nam
                              <input type="radio" name="txtSex" value="0" required> Nữ
                          </div>
                          <div class="form-group">
                              <label for="txtCMND">CMND  <span style="color:red">*</span></label>
                              <input type="text" name="txtCMND" class="form-control" placeholder="CMND" required/>
                          </div>
                          <div class="form-group">
                              <label class="control-label">Date <span style="color:red">*</span></label><br/>
                              <div >
                                  <input type="text" name="txtDate" placeholder="" data-mask="99/99/9999" class="form-control" required>
                                  <span class="help-inline">dd/mm/yyyy</span>
                              </div>
                          </div>
                          <div class="form-group">
                            <label class="control-label">Quyền truy cập <span style="color:red">*</span></label><br/>
                            <div class="checkboxes">
                                <input name="Priviledge" id="checkbox-01" value="service" type="checkbox"> Dịch Vụ <br />
                                <input name="Priviledge" id="checkbox-02" value="product" type="checkbox"> Sản phẩm <br />
                                <input name="Priviledge" id="checkbox-02" value="admin" type="checkbox"> Quản Lý Admin<br />
                                <!-- <input name="Priviledge" id="checkbox-03" value="1" type="checkbox"> This is nice checkbox. <br /> -->
                            </div>
                          </div>
                          <div class="form-group">
                              <label for="password">Mật khẩu  <span style="color:red">*</span></label>
                              <input type="password" class="form-control" name="password" placeholder="Mật khẩu" required/>
                          </div>
                          <div class="form-group">
                              <label for="txtRePass">Xác nhận mật khẩu  <span style="color:red">*</span></label>
                              <input type="password" class="form-control" name="txtRePass" placeholder="Xác nhận mật khẩu" required/>
                          </div>
                      </div>
                      <div class="col-lg-12">
                          <input type="submit" name="btnSubmit" class="btn btn-info" id="pulsate-regular" value="Tạo Admin">
                      </div>
                  </form>
              </div>
          </section>

      </div>

  </div>



<!--footer start-->
<%- include partials/footer %>
